<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Certificates Page</title>
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #003366;
            color: white;
            overflow-x: hidden;
        }

        header {
            position: relative;
            background: linear-gradient(135deg, #003366 50%, #00aaff 50%);
            color: white;
            text-align: center;
            padding: 4em 1em;
            clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);
            margin-top: 80px; /* Adjusted for navbar */
        }

        header h1 {
            font-size: 3rem;
            margin: 0;
            text-transform: uppercase;
        }

        header p {
            margin-top: 1em;
            font-size: 1.2rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 40px;
            margin: 2em 20px;
            padding: 0 20px;
        }

        .button {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px;
            background: white;
            color: #003366;
            text-transform: uppercase;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            min-height: 150px;
        }

        .button:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.25);
            background-color: #00aaff;
            color: white;
        }

        .button img {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        /* Footer styles */
        footer {
            position: relative; /* Changed from absolute to relative */
            width: 100%;
            text-align: center;
            padding: 1.5em 0;
            background-color: #003366;
            color: #ffffff;
            font-size: 0.9rem;
            margin-top: 50px;
        }

        /* Navigation Bar */
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 20px;
            background-color: #003366;
            width: 100%;
            box-shadow: 0 2px 10px rgba(131, 214, 237, 0.5);
            position: fixed; /* Fix the navbar at the top */
            top: 0;
            left: 0;
            z-index: 1000; /* Ensure it stays above other content */
        }

        .navbar-left {
            display: flex;
            align-items: center;
            gap: 15px; /* Space between menu icon and logo */
        }

        .menu-icon {
            font-size: 28px;
            cursor: pointer;
            color: #ffffff;
        }

        /* Navigation Links */
        .nav-links {
            display: flex;
            list-style: none;
            gap: 20px;
            margin-left: auto;
            align-items: center;
            margin-right: 40px;
        }

        .nav-links li a {
            text-decoration: none;
            margin-left: 40px;
            color: #fff;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease, padding 0.3s ease;
        }

        .nav-links li a:hover {
            background-color: rgba(110, 181, 255, 0.2);
            border-radius: 5px;
            padding: 5px 15px;
        }

        /* Icons */
        .navbar-right {
            display: flex;
            margin-right: 40px;
            align-items: center;
            color: white;
            gap: 15px;
        }

        .navbar-right i {
            font-size: 20px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .navbar-right i:hover {
            transform: scale(1.1);
        }

        .custom-link {
            color: white;
            text-decoration: none;
        }

        .custom-link:hover {
            color: #ddd;
        }

        /* Dropdown Menu */
        .dropdown-menu {
            position: absolute;
            top: 60px;
            left: 0;
            width: 250px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            display: none;
            z-index: 9999;
            overflow: hidden;
            animation: fadeIn 0.3s ease-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .profile-section {
            background: linear-gradient(135deg, #4361ee, #003366);
            color: white;
            padding: 1.2rem 1.5rem;
            text-align: center;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .profile-img2 {
            display: none; /* Hide the image */
        }

        .profile-name {
            font-weight: 600;
            font-size: 1.05rem;
            line-height: 1.3;
        }

        .profile-info {
            font-size: 0.82rem;
            opacity: 0.85;
            letter-spacing: 0.3px;
            margin-top: 0.4rem; /* Space between name and ID */
        }

        .dropdown-links {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .dropdown-links li {
            border-bottom: 1px solid #eee;
        }

        .dropdown-links li:last-child {
            border-bottom: none;
        }

        .dropdown-links li a {
            display: flex;
            align-items: center;
            padding: 0.85rem 1.5rem;
            text-decoration: none;
            color: #2b2d42;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .dropdown-links li a i {
            font-size: 1rem;
            color: #5b5c63;
            margin-right: 0.5rem; /* Space between icon and text */
            transition: color 0.3s ease;
        }

        .dropdown-links li a:hover {
            background: #f8f8f8;
            padding-left: 1.75rem;
            color: #003366;
        }

        .dropdown-links li a:hover i {
            color: #003366;
        }

        /* Ensure logout link icon matches accent color */
        .dropdown-links li a[style*="color: #f72585;"] i {
            color: #f72585;
        }

        /* Logo Styling */
        .navbar .logo-container {
            display: inline-block;
        }

        .navbar .logo {
            height: 40px; /* Adjusted for better alignment */
            width: auto;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <!-- Left Section: Menu Icon + Logo -->
        <div class="navbar-left">
            <!-- Menu icon for mobile -->
            <div class="menu-icon" onclick="toggleMenu()">
                <span>☰</span>
            </div>

            <!-- Logo -->
            <div class="logo-container">
                <img src="https://i.pinimg.com/736x/33/37/ee/3337eeff3be1747f984d9d8e59eeb1c1.jpg" alt="Logo" class="logo">
            </div>
        </div>

        <!-- Navigation Links -->
        <ul class="nav-links">
            <li><a href="/home">Home</a></li>
            <li><a href="/companies">Companies</a></li>
            <li><a href="/certi-0">Certificates</a></li>
            <li><a href="/courses">Courses</a></li>
            <% if (!user) { %>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Sign Up</a></li>
            <% } %>
        </ul>

        <!-- Right Section: Notifications + Profile -->
        <% if (user) { %>
        <div class="navbar-right">
            <!-- Profile Icon -->
            <a href="/profile" title="Profile" class="custom-link">
                <i class="fas fa-user-circle"></i>
            </a>
        </div>

        <!-- Dropdown Menu -->
        <div id="dropdown-menu" class="dropdown-menu">
            <div class="profile-section">
                <span class="profile-name"><%= user.name %></span>
                <span class="profile-info"><%= user.std_id %></span>
            </div>
            <ul class="dropdown-links">
                <li><a href="companies"><i class="fas fa-building"></i> Companies</a></li>
                <li><a href="cv"><i class="fas fa-file-alt"></i> CV</a></li>
                <li><a href="courses"><i class="fas fa-book-open"></i> Courses</a></li>
                <li><a href="/task_std"><i class="fas fa-tasks"></i> Student Task</a></li>
                <li><a href="/student_applicant"><i class="fas fa-users"></i> Applicants</a></li>
                <li><a href="certi-0"><i class="fas fa-certificate"></i> Certificate</a></li>
                <li><a href="contact"><i class="fas fa-envelope"></i> Contact Us</a></li>
                <li><a href="logout" style="color: #f72585;"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
            </ul>
        </div>
        <% } %>
    </nav>

    <header>
        <h1>International Certificates</h1>
        <p>Explore our diverse range of certifications across multiple categories. Start your learning journey today!</p>
    </header>

    <div class="container">
        <button class="button" onclick="openCategory('cis')">
            <img src="https://img.icons8.com/ios-filled/50/00aaff/technical-support.png" alt="CIS Icon">
            CIS Certificates
        </button>
        <button class="button" onclick="openCategory('cs')">
            <img src="https://img.icons8.com/ios-filled/50/00aaff/computer.png" alt="CS Icon">
            CS Certificates
        </button>
        <button class="button" onclick="openCategory('sw')">
            <img src="https://img.icons8.com/ios-filled/50/00aaff/source-code.png" alt="SW Icon">
            SW Certificates
        </button>
        <button class="button" onclick="openCategory('ai')">
            <img src="https://img.icons8.com/ios-filled/50/00aaff/robot.png" alt="AI Icon">
            AI Certificates
        </button>
        <button class="button" onclick="openCategory('cyber')">
            <img src="https://img.icons8.com/ios-filled/50/00aaff/lock.png" alt="Cyber Icon">
            Cyber Security Certificates
        </button>
        <button class="button" onclick="openCategory('bit')">
            <img src="https://img.icons8.com/ios-filled/50/00aaff/database.png" alt="BIT Icon">
            BIT Certificates
        </button>
    </div>

    <!-- Footer -->
    <footer>
        <p>© 2024 Company Listings. All rights reserved.</p>
    </footer>

    <script>
        function openCategory(categoryId) {
            const firstWord = categoryId.split(' ')[0];
            window.location.href = `${firstWord}`;
        }

        function toggleMenu() {
            var dropdownMenu = document.getElementById("dropdown-menu");
            dropdownMenu.style.display = dropdownMenu.style.display === "block" ? "none" : "block";
        }

        document.addEventListener('click', function(event) {
            var dropdownMenu = document.getElementById("dropdown-menu");
            var menuIcon = document.querySelector('.menu-icon');
            if (!menuIcon.contains(event.target) && !dropdownMenu.contains(event.target)) {
                dropdownMenu.style.display = 'none';
            }
        });
    </script>
</body>
</html>