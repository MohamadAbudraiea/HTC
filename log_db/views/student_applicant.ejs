<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Student Applications</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 p-6">
    <div class="max-w-6xl mx-auto bg-white p-6 rounded shadow">
        <h1 class="text-2xl font-bold mb-4">My Applications</h1>

        <table class="min-w-full table-auto border border-gray-300">
            <thead>
                <tr class="bg-gray-200">
                    <th class="p-2 border">Company Name</th>
                    <th class="p-2 border">Email</th>
                    <th class="p-2 border">Training Type</th>
                    <th class="p-2 border">Status</th>
                </tr>
            </thead>
            <tbody>
                <% applications.forEach(app=> { %>
                    <tr class="border-t hover:bg-gray-50">
                        <td class="p-2 border">
                            <%= app.company_name || "Unknown" %>
                        </td>
                        <td class="p-2 border">
                            <%= app.email %>
                        </td>
                        <td class="p-2 border">
                            <%= app.training_type %>
                        </td>
                        <td class="p-2 border">
                            <% if (app.status==='accepted' ) { %>
                                <span class="px-2 py-1 bg-green-500 text-white rounded">Accepted</span>
                                <% } else if (app.status==='rejected' ) { %>
                                    <span class="px-2 py-1 bg-red-500 text-white rounded">Rejected</span>
                                    <% } else { %>
                                        <span class="px-2 py-1 bg-gray-500 text-white rounded">Waiting</span>
                                        <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>